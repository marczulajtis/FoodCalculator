@model FoodCalculator.Models.Category

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<div class="margin-top"></div>*@

<h3>Add category</h3>

<div class="form">
    @if (TempData["Message"] != null)
    {
        <p class="alert alert-success" role="alert">@TempData["Message"]</p>
    }

    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

    @using (Html.BeginForm("AddCategory", "Home", FormMethod.Post))
    {
        <div class="form-group">
            @Html.TextBoxFor(x => x.CategoryName, new { @class = "input-md form-control", placeholder = "Category name" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block btn-large"> Add category </button>
        </div>
    }
</div>